# Environment Configuration Example

# Application Settings
APP_ENV=development
PROJECT_NAME="Web Assistant"
VERSION=1.0.0
DEBUG=true

# API Settings
API_V1_STR=/api/v1

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Langfuse Settings
LANGFUSE_PUBLIC_KEY="your-langfuse-public-key"
LANGFUSE_SECRET_KEY="your-langfuse-secret-key"
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_TRACING_ENVIRONMENT=development

# LLM Settings
LLM_API_KEY="your-llm-api-key" # e.g. OpenAI API key
LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.2

# Anthropic/Claude Settings (for premium model fallback - DEV-185)
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# JWT Settings
JWT_SECRET_KEY="your-jwt-secret-key"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=30

# Database Settings
POSTGRES_URL="postgresql://postgres:your-db-password@localhost:5432/pratikoai"
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10

# Rate Limiting Settings
RATE_LIMIT_DEFAULT="1000 per day,200 per hour"
RATE_LIMIT_CHAT="100 per minute"
RATE_LIMIT_CHAT_STREAM="100 per minute"
RATE_LIMIT_MESSAGES="200 per minute"
RATE_LIMIT_LOGIN="100 per minute"

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Email/SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
FROM_EMAIL=your-email@gmail.com

# Stakeholder Configuration
# Primary stakeholder email for notifications and reports
STAKEHOLDER_EMAIL=your-email@example.com

# Roadmap Notification Settings
# Comma-separated list for multiple recipients
ROADMAP_NOTIFICATION_EMAIL=your-email@example.com,another-email@example.com
ROADMAP_AUTO_UPDATE=true

# Slack Integration (for Subagent Notifications)
# Modern Slack webhooks require separate webhooks for different channels
# Get webhook URLs from: https://api.slack.com/apps → Your App → Incoming Webhooks
# Create two webhooks:
#   1. For #architect-alerts channel (critical architecture veto notifications)
#   2. For #scrum-updates channel (progress updates, task completions, etc.)
SLACK_WEBHOOK_URL_ARCHITECT=https://hooks.slack.com/services/YOUR/ARCHITECT/WEBHOOK
SLACK_WEBHOOK_URL_SCRUM=https://hooks.slack.com/services/YOUR/SCRUM/WEBHOOK
SLACK_ENABLED=true

# Security Monitoring (Sandbox Weekly Review)
# Weekly security reports are sent via email to METRICS_REPORT_RECIPIENTS_ADMIN
# No additional configuration needed - uses existing SMTP and admin recipient settings

# RSS Collection Configuration
# Time to run daily RSS collection (HH:MM format, Europe/Rome timezone)
RSS_COLLECTION_TIME=01:00

# Daily Ingestion Report Configuration (DEV-BE-70)
# Recipients receive reports from ALL environments - environment identified via subject prefix
# and color-coded banner (DEV=gray, QA=blue, PROD=green)
INGESTION_REPORT_RECIPIENTS=your-email@pratikoai.com
INGESTION_REPORT_TIME=06:00
INGESTION_REPORT_ENABLED=true


# Flagsmith (ADR-031) - Runtime config without redeployment
FLAGSMITH_SERVER_KEY=              # Server-side environment key from Flagsmith UI
FLAGSMITH_API_URL=http://flagsmith:8000/api/v1/
FLAGSMITH_ADMIN_EMAIL=admin@pratiko.app   # Flagsmith superuser email (QA only)
FLAGSMITH_ADMIN_PASSWORD=                 # Flagsmith superuser password (QA only)
