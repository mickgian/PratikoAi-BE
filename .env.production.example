# PratikoAI Backend - Production Environment Configuration Example
# Copy this to .env.production and fill in your actual values
# CRITICAL: Use strong, unique values for all secrets in production

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database Configuration (Use SSL in production)
POSTGRES_URL=postgresql+asyncpg://username:password@prod-db-host:5432/pratikoai_prod?ssl=require

# JWT Configuration (Use strong secret)
JWT_SECRET_KEY=your-production-jwt-secret-key-must-be-very-secure-and-long
JWT_ACCESS_TOKEN_EXPIRE_HOURS=168  # 7 days for production
JWT_REFRESH_TOKEN_EXPIRE_DAYS=90   # 90 days for production

# LLM Configuration
LLM_API_KEY=your-production-openai-api-key
LLM_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-production-anthropic-api-key

# Redis Configuration (Use Redis cluster in production)
REDIS_URL=redis://prod-redis-cluster:6379/0
REDIS_PASSWORD=your-redis-password

# Email Configuration for Metrics Reports
SMTP_SERVER=smtp.gmail.com  # Or your corporate SMTP server
SMTP_PORT=587
SMTP_USERNAME=pratikoai-prod@company.com
SMTP_PASSWORD=your-production-app-password
FROM_EMAIL=noreply@pratikoai.com

# Production Metrics Report Recipients
METRICS_REPORT_RECIPIENTS=alerts@pratikoai.com,ops-team@pratikoai.com
METRICS_REPORT_RECIPIENTS_ADMIN=admin@pratikoai.com,cto@pratikoai.com
METRICS_REPORT_RECIPIENTS_TECH=tech-alerts@pratikoai.com,devops@pratikoai.com
METRICS_REPORT_RECIPIENTS_BUSINESS=business-metrics@pratikoai.com,ceo@pratikoai.com

# Strict Rate Limiting for Production
RATE_LIMIT_DEFAULT=200 per day,50 per hour

# Stripe Configuration (Live Mode)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
STRIPE_MONTHLY_PRICE_ID=price_your_production_69_euro_price_id

# Vector Database Configuration - PostgreSQL + pgvector
# (Pinecone removed - using native PostgreSQL vector search)

# Security Configuration (Rotate regularly)
API_KEYS={"admin": "prod-admin-key-rotate-monthly", "service": "prod-service-key-rotate-monthly"}
API_KEY_ROTATION_DAYS=30

# Monitoring and Tracing
LANGFUSE_PUBLIC_KEY=your-production-langfuse-public-key
LANGFUSE_SECRET_KEY=your-production-langfuse-secret-key

# Production-specific settings
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
BACKUP_ENABLED=true
SSL_REDIRECT=true
