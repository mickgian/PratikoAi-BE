# PratikoAI Backend - Staging Environment Configuration Example
# Copy this to .env.staging and fill in your actual values

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_URL=postgresql+asyncpg://username:password@staging-db-host:5432/pratikoai_staging

# JWT Configuration
JWT_SECRET_KEY=your-staging-jwt-secret-key-make-it-secure
JWT_ACCESS_TOKEN_EXPIRE_HOURS=720
JWT_REFRESH_TOKEN_EXPIRE_DAYS=365

# LLM Configuration
LLM_API_KEY=your-staging-openai-api-key
LLM_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-staging-anthropic-api-key

# Redis Configuration
REDIS_URL=redis://staging-redis-host:6379/0

# Email Configuration for Metrics Reports
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=pratikoai-staging@company.com
SMTP_PASSWORD=your-staging-app-password
FROM_EMAIL=staging@pratikoai.com

# Staging Metrics Report Recipients
METRICS_REPORT_RECIPIENTS=staging-alerts@pratikoai.com,qa-team@pratikoai.com
METRICS_REPORT_RECIPIENTS_ADMIN=admin@pratikoai.com
METRICS_REPORT_RECIPIENTS_TECH=tech-team@pratikoai.com,staging-alerts@pratikoai.com
METRICS_REPORT_RECIPIENTS_BUSINESS=business-team@pratikoai.com

# Moderate Rate Limiting for Staging
RATE_LIMIT_DEFAULT=500 per day,100 per hour

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret

# Vector Database Configuration
PINECONE_API_KEY=your-staging-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=pratikoai-knowledge-staging

# Security Configuration
API_KEYS={"admin": "staging-admin-key", "service": "staging-service-key"}
API_KEY_ROTATION_DAYS=30

# Monitoring and Tracing
LANGFUSE_PUBLIC_KEY=your-staging-langfuse-public-key
LANGFUSE_SECRET_KEY=your-staging-langfuse-secret-key