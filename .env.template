# Figma Code Connect Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# FIGMA ACCESS TOKEN
# ===========================================
# Generate from: https://www.figma.com/developers/api#access-tokens
# Required scopes: 
# - File content (read)
# - Library analytics (read) 
# - Webhooks (write) - optional for real-time sync
FIGMA_ACCESS_TOKEN=your_figma_personal_access_token_here

# ===========================================
# FIGMA FILE ID
# ===========================================
# Extract from your Figma URL:
# https://www.figma.com/file/[FILE_ID]/[FILE_NAME]
# For your project: https://www.figma.com/make/zH5cQQ19Zq59XtffCzW4sB/PratikoAI-Landing-Page
FIGMA_FILE_ID=zH5cQQ19Zq59XtffCzW4sB

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================
# Port for Figma MCP server (should match your claude mcp config)
FIGMA_MCP_PORT=3333

# MCP server host
FIGMA_MCP_HOST=localhost

# ===========================================
# CODE CONNECT SETTINGS
# ===========================================
# Enable interactive mode for live component preview
FIGMA_INTERACTIVE_MODE=true

# Port for Code Connect dev server
FIGMA_CONNECT_PORT=3001

# Enable automatic token sync
FIGMA_TOKEN_SYNC=true

# ===========================================
# OPTIONAL: WEBHOOKS (for real-time updates)
# ===========================================
# Webhook endpoint URL (if using webhooks for real-time sync)
# FIGMA_WEBHOOK_URL=https://your-domain.com/api/figma-webhook

# Webhook secret for payload validation
# FIGMA_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug logging
DEBUG_FIGMA=true

# Cache directory for Figma data
FIGMA_CACHE_DIR=.figma-cache

# Cache TTL in seconds (default: 3600 = 1 hour)
FIGMA_CACHE_TTL=3600