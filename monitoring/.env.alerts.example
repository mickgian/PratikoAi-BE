# PratikoAI Alert Configuration
# Copy this to .env.alerts and configure your notification channels

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
ALERT_EMAIL_FROM=alerts@pratikoai.com
ALERT_EMAIL_TO=admin@pratikoai.com,alerts@pratikoai.com
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=alerts@pratikoai.com
ALERT_EMAIL_PASSWORD=your-app-password

# =============================================================================
# SLACK NOTIFICATIONS  
# =============================================================================
# Create webhook at: https://api.slack.com/apps > Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#pratikoai-alerts
SLACK_USERNAME=PratikoAI Monitor

# =============================================================================
# WEBHOOK INTEGRATIONS
# =============================================================================
# Custom webhook endpoint for integrations
WEBHOOK_URL=http://localhost:3001/alerts
WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# PAGERDUTY (CRITICAL ALERTS ONLY)
# =============================================================================
# Create integration at: PagerDuty > Services > Integrations > Events API v2
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_ROUTING_KEY=your-routing-key

# =============================================================================
# ALERT THRESHOLDS (Override defaults)
# =============================================================================
# Cost thresholds
ALERT_MAX_USER_COST_EUR=2.50
ALERT_MAX_DAILY_COST_EUR=100.00
ALERT_COST_SPIKE_THRESHOLD=50

# Business thresholds  
ALERT_MIN_MRR_EUR=20000
ALERT_MAX_PAYMENT_FAILURE_RATE=5
ALERT_MAX_CHURN_RATE=10
ALERT_NO_SIGNUP_HOURS=48

# Performance thresholds
ALERT_MAX_API_RESPONSE_TIME=5.0
ALERT_MIN_CACHE_HIT_RATIO=0.70
ALERT_MAX_DB_CONNECTION_RATIO=0.80
ALERT_MAX_ERROR_RATE=5

# Security thresholds
ALERT_MAX_AUTH_FAILURE_RATE=0.1
ALERT_MAX_API_REQUEST_RATE=100

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Alert frequency limits (prevent spam)
ALERT_MIN_INTERVAL_SECONDS=300
ALERT_MAX_ALERTS_PER_HOUR=10

# Business hours for non-critical alerts (UTC)
ALERT_BUSINESS_HOURS_START=09:00
ALERT_BUSINESS_HOURS_END=17:00
ALERT_BUSINESS_DAYS=MON,TUE,WED,THU,FRI

# Maintenance windows (suppress alerts)
ALERT_MAINTENANCE_WINDOW_START=02:00
ALERT_MAINTENANCE_WINDOW_END=04:00

# =============================================================================
# TEAM CONTACT INFORMATION
# =============================================================================
# On-call contacts
ONCALL_ENGINEERING=engineering-oncall@pratikoai.com
ONCALL_BUSINESS=business-lead@pratikoai.com
ONCALL_SECURITY=security-lead@pratikoai.com

# Team leads
LEAD_ENGINEERING=cto@pratikoai.com
LEAD_BUSINESS=business-director@pratikoai.com
LEAD_FINANCE=finance-director@pratikoai.com
LEAD_SECURITY=security-lead@pratikoai.com

# Executive escalation
EXEC_CEO=ceo@pratikoai.com
EXEC_CTO=cto@pratikoai.com
EXEC_CFO=cfo@pratikoai.com