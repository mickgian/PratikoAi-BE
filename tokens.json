    "focus": {
      "ring": "3px",
      "ringColor": "var(--ring)/50"
    },
    "transitions": {
      "default": "all 0.15s ease-in-out",
      "colors": "color, background-color, border-color, text-decoration-color, fill, stroke",
      "shadow": "box-shadow",
      "transform": "transform"
    },
    "animations": {
      "fadeInUp": {
        "duration": "0.6s",
        "easing": "ease-out",
        "from": {
          "opacity": "0",
          "transform": "translateY(20px)"
        },
        "to": {
          "opacity": "1", 
          "transform": "translateY(0)"
        }
      },
      "pulseDot": {
        "duration": "2s",
        "iteration": "infinite",
        "keyframes": {
          "0%, 100%": {
            "opacity": "1",
            "transform": "scale(1)"
          },
          "50%": {
            "opacity": "0.8", 
            "transform": "scale(1.1)"
          }
        }
      }
    }
